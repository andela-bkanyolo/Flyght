
  <% if flash[:airports] %>
    <div id="error_explanation">
      <h5>
        <%= flash[:airports] %>
      </h5>
    </div>
  <% elsif flash[:time] %>
    <div id="error_explanation">
      <h5>
        <%= flash[:time] %>
      </h5>
    </div>
  <% elsif flash[:flights] %>
    <div id="error_explanation">
      <h5>
        <%= flash[:flights] %>
      </h5>
    </div>
  <% else %>
    <%= form_tag new_booking_path, class: "row",
      method: 'get', id: "flight_view" do %>

      <% @flights.each do |flight| %>
        <div class="col s12 m6 l4">
          <div>
            <input name="flight" value=<%= flight.id %> type="radio" id=<%= flight.id %> />
            <%= label_tag 'flight_label', "Book this flight (#{flight.price} USD)", for: flight.id %>
          </div>
          <div>
            <%= render partial: "partials/flight", object: flight %>
          </div>
        </div>
      <% end %>

      <%= hidden_field_tag "passengers", @passengers %>

      <div class="input-field">
        <button id="select" class="btn waves-effect waves-light col s12 l12" type="submit">Select Flight
          <i class="material-icons right">select</i>
        </button>
      </div>

    <% end %>
  <% end %>

