<div class="container">
  <div class="row">
    <%= form_for @user, html: { class: "col s12" } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@user.errors.count, "error") %> found:
      </h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div id="sign-up">
    <h3 class="row center-align">Sign Up</h3>

    <div class="row">
      <div class="input-field col s12 l6">
        <i class="material-icons prefix">account_circle</i>
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name %>
      </div>
      <div class="input-field col s12 l6">
        <i class="material-icons prefix">account_circle</i>
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name %>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <%= f.label :email, "Email" %>
        <%= f.email_field :email %>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">security</i>
        <%= f.label :password, "Password" %>
        <%= f.password_field :password %>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">security</i>
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>
      </div>
      <button class="btn waves-effect waves-light col s12 m4 l4 offset-m4 offset-l4" type="submit" id="Sign Up">Sign Up
        <i class="material-icons right">save</i>
      </button>
    </div>
    </div>
    <% end %>
  </div>
</div>
